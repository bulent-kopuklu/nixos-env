/* Confirm Dialog */

@import "../colors.rasi"

* {
    background-color:       @bg;
    text-color:             @fg;
	font:				 	"DejaVuSansMono 12";
}

window {
    width:      			320px;
    padding:    			25px;
    border:					2px 2px 2px 2px;
    border-radius:          0px;
    border-color:           @bd;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@fg;
}
